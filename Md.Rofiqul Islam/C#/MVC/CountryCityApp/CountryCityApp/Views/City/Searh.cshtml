
@{
    ViewBag.Title = "Searh";
}

<h2>Searh</h2>

@using (Html.BeginForm())
{<h2>Search</h2>
    @Html.RadioButton("CitySearch,", "CountryName")
    @Html.Label("Country Name")
    @Html.Editor("SearchText")<br />

    @Html.RadioButton("CitySearch,", "CountryList")
    @Html.Label("Country Name")
    @Html.DropDownList("CountrySearchSelected", string.Empty)<br />
    <input type="submit" value="Search" />}



table class="table">
<tr>
    <th>
        @Html.DisplayNameFor(model => model.CityCountry.Name)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Name)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.About)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.NoOfDwelers)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Location)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Weather)
    </th>
    <th></th>
</tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CityCountry.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.About)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoOfDwelers)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Weather)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.CityId }) |
            @Html.ActionLink("Details", "Details", new { id = item.CityId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.CityId })
        </td>
    </tr>
}

</table>

